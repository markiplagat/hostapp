<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr class="table-dark">
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Author</th>
    <th scope="col">Tag</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.author %></td>
      <td><%= post.tag %></td>
      <td><%= link_to 'Show', post, class: "btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-success"%></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-outline-primary" %>
