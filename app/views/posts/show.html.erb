<div >
  <h1 class="display-4">
    <strong>Title:</strong>
    <%= @post.title %>
  </h1>
  <p class="lead">
    <strong>Description:</strong>
    <%= @post.description %>
  </p>
  <p>
    <strong>Author:</strong>
    <%= @post.author %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= @post.tag %>
  </p>
  <h2>Comments</h2>
  <% @post.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
    <p>
      <b>Comment:</b>
      <%= comment.body %>
    </p>
    <p>
      <%= link_to 'Destroy Comment', [@post, comment],
                  :confirm => 'Are You Sure?',
                  remote:true,
                  :method => :delete %>
    </p>
  <% end %>
  <h2>Add Comment</h2>
  <%= form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body %> <br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <%end %>

  <hr class="my-4">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %> |
  <%= link_to 'Back', posts_path, class: "btn btn-secondary" %>
</div>




