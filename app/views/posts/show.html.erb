<div class="jumbotron">
  <h1 class="display-4">
    <strong>Title:</strong>
    <%= @post.title %>
  </h1>
  <p class="lead">
    <strong>Description:</strong>
    <%= @post.description %>
  </p>
  <p>
    <strong>Author:</strong>
    <%= @post.author %>
  </p>

  <p>
    <strong>Tag:</strong>
    <%= @post.tag %>
  </p>
  <h2>Comments</h2>
<%= render @post.comments %>
  <h2>Add Comment</h2>
  <%= render 'comments/form' %>

  <hr class="my-4">
  <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %> |
  <%= link_to 'Back', posts_path, class: "btn btn-secondary" %>
</div>




